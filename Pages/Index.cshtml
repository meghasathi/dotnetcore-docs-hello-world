@page
@model IndexModel
@{
    ViewData["Title"] = "MeghaWeb page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            text-align: center;
            overflow: hidden;
        }
        .text-center {
            padding: 2em;
        }
        .display-4 {
            font-size: 2.5em;
            margin: 0.5em 0;
            animation: fadeIn 2s ease-in-out;
        }
        p {
            font-size: 1.2em;
            color: #666;
            line-height: 1.6;
            animation: fadeIn 3s ease-in-out;
        }
        a {
            color: #4CAF50;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        .os-version {
            font-size: 1.1em;
            margin-top: 1em;
            animation: fadeIn 4s ease-in-out;
        }
        .header {
            background-color: #4CAF50;
            color: white;
            padding: 1em 0;
            animation: slideIn 1.5s forwards;
        }
        .container {
            max-width: 800px;
            margin: auto;
            overflow: hidden;
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        @keyframes slideIn {
            from {
                transform: translateY(-100%);
            }
            to {
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="container">
            <h1>Welcome to MeghaWeb Page</h1>
        </div>
    </header>
    <div class="text-center">
        <h1 class="display-4">Hello World from MeghaWebPage</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with Megha.NET Core</a>.</p>
        <hr />
        <div class="os-version">Host operating system: @Model.OSVersion</div>
    </div>
</body>
</html>
